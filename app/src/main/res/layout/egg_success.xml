<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center_horizontal"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="io.github.nestegg333.nestegg.MainActivity" >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    android:src = "@drawable/babybluebackground"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <TextView
        android:id="@+id/pet_state_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="You raised me!"
        android:padding="20dp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/celebdragon"
        android:layout_width="250dp"
        android:layout_height="190dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:background="@drawable/celebrationanimate" />

    <!--<Button-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="1"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:text="Continue"-->
    <!--android:id="@+id/pet_failure_continue">-->



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orangebutton"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:padding="15dp"/>

        <Button
            android:id="@+id/egg_success_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continue!"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            style="?android:attr/borderlessButtonStyle" />

    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

</LinearLayout>

</FrameLayout>