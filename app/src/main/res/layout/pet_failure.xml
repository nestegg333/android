<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E8E8"
    android:weightSum="15">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src = "@drawable/background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src = "@drawable/speechbubble"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:padding="15dp"
                />

            <TextView
                android:id="@+id/pet_failure_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="No!! Jethro ran away!!"
                android:textColor="#ffffff"/>

        </FrameLayout>

        <ImageView
            android:id = "@+id/runningawaydragon"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background = "@drawable/runningawayanimate"
            android:paddingLeft="50dp"
            android:paddingRight = "50dp"
            android:paddingTop="260dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Be nicer next time >:("
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!--<Button-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:text="Continue"-->
        <!--android:id="@+id/pet_failure_continue">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shortgreenbutton"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/pet_failure_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TRY AGAIN"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

        </FrameLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>