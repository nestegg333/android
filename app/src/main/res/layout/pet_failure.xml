<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E8E8"
    android:weightSum="15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src = "@drawable/background"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src = "@drawable/speechbubble"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/pet_failure_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="25dp"
            android:textSize="35sp"
            android:gravity="center"
            android:text="No!! Jethro ran away!!"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src = "@drawable/dragonhead"
            android:paddingLeft="50dp"
            android:paddingRight = "50dp"
            android:paddingTop="260dp"
            android:adjustViewBounds="true"
            android:foregroundGravity="bottom"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom = "true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Be nicer next time >:("/>

    <Button
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="Continue"
        android:id="@+id/pet_failure_continue">

    </Button>


</LinearLayout>