<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E8E8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src = "@drawable/background"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/set_goal_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:gravity="center"
            android:text="SIGN UP"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="15sp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Enter your nestegg goal this month to hatch your egg!"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src = "@drawable/long_button"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding= "20dp" />

        <EditText
            android:id="@+id/new_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="90dp"
            android:layout_centerInParent="true"
            android:hint="$"
            android:inputType="number"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="15sp"
        android:gravity="center"
        android:padding = "5dp"
        android:text="Don't forget to name your nestegg!"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src = "@drawable/long_button"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:padding= "20dp"/>


        <EditText
            android:id="@+id/new_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:inputType="text"
            android:layout_marginLeft="90dp"
            android:layout_centerInParent="true"
            android:hint="nestegg name"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>

    <FrameLayout
        android:id="@+id/register_button_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/long_greenbutton"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Finish!"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/set_first_goal_continue"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"/>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/register_spinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

</LinearLayout>