<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:inputType="textPassword"
        android:key="password"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Change password" />

    <EditTextPreference
        android:inputType="numberPassword"
        android:key="checking"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Change checking account number" />

    <EditTextPreference
        android:inputType="numberPassword"
        android:key="savings"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Change savings account number" />

</PreferenceScreen>
